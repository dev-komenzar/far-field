---
import { Picture } from '@astrojs/image/components'
import Kamogawa from '../assets/kamogawa.jpg'
---

<section id='hero-top' class='feature'>
	<Picture
		class='pic'
		src={Kamogawa}
		alt='夕暮れの鴨川'
		sizes='(max-width: 480px) 300px, ((min-width:480px) and (max-width: 1280px)) 480px, (min-width: 1280px) 1280px'
		widths={[400, 800, 1280]}
		aspectRatio='1280:854'
		position='center'
	/>
</section>

<script>
	if (window.matchMedia('(max-width: 480px)').matches) {
		let hero = document.getElementById('hero-top')
		hero?.classList.add('full')
		hero?.classList.remove('feature')
	}
</script>

<style lang='scss'>
	.pic {
		width: 100%;
		border-radius: 0;
	}

	@media screen and (min-width: 480px) {
		.pic {
			border-radius: 24px;
		}
	}
</style>
